<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blockchain.server.sysconf.mapper.SystemNoticeMapper">
    <sql id="tableName">conf_system_notice</sql>

    <select id="selectByStatusAndLanguages" resultType="com.blockchain.server.sysconf.entity.SystemNotice">
      select * from
        <include refid="tableName"/>
        <where>
             <if test="status != null and status != ''"> and status = #{status}</if>
             <if test="languages != null and languages != ''"> and languages = #{languages}</if>
        </where>
        order by `rank` desc,create_time desc
    </select>
</mapper>