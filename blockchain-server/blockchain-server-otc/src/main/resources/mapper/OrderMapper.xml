<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blockchain.server.otc.mapper.OrderMapper">

    <sql id="table">otc_order</sql>

    <resultMap id="OrderMap" type="com.blockchain.server.otc.entity.Order">
        <id property="id" column="id"/>
        <result property="orderType" column="order_type"/>
        <result property="amount" column="amount"/>
        <result property="orderNumber" column="order_number"/>
        <result property="orderStatus" column="order_status"/>
        <result property="orderPayType" column="order_pay_type"/>
        <result property="chargeRatio" column="charge_ratio"/>
        <result property="buyUserId" column="buy_user_id"/>
        <result property="adId" column="ad_id"/>
        <result property="modifyTime" column="modify_time"/>
        <result property="sellStatus" column="sell_status"/>
        <result property="sellUserId" column="sell_user_id"/>
        <result property="createTime" column="create_time"/>
        <result property="price" column="price"/>
        <result property="turnover" column="turnover"/>
        <result property="buyStatus" column="buy_status"/>
        <result property="coinName" column="coin_name"/>
        <result property="unitName" column="unit_name"/>
    </resultMap>

    <select id="selectByAdIdAndStatus" resultMap="OrderMap">
        SELECT * FROM
        <include refid="table"/>
        WHERE ad_id = #{adId}
        AND order_status IN
        <foreach collection="status" item="sitem" open="(" separator="," close=")">
            #{sitem}
        </foreach>
    </select>

    <select id="listUserOrder" resultType="com.blockchain.server.otc.dto.order.OrderDTO">
        SELECT * FROM
        <include refid="table"/>
        <where>
            (buy_user_id = #{userId} OR sell_user_id = #{userId})
            <if test="coinName != null and coinName != ''">
                AND coin_name = #{coinName}
            </if>
            <if test="unitName != null and unitName != ''">
                AND unit_name = #{unitName}
            </if>
            <if test="orderType != null and orderType != ''">
                <if test="orderType == 'BUY'">
                    AND buy_user_id = #{userId}
                </if>
                <if test="orderType == 'SELL'">
                    AND sell_user_id = #{userId}
                </if>
            </if>
            <if test="orderStatus != null and orderStatus != ''">
                AND order_status = #{orderStatus}
            </if>
            <if test="payType != null and payType != ''">
                AND order_pay_type = #{payType}
            </if>
        </where>
        ORDER BY modify_time DESC
    </select>

    <select id="selectByUserId" resultMap="OrderMap">
        SELECT * FROM
        <include refid="table"/>
        WHERE (buy_user_id = #{userId} OR sell_user_id = #{userId})
    </select>

    <select id="selectByIdForUpdate" resultMap="OrderMap">
        SELECT * FROM
        <include refid="table"/>
        WHERE id = #{orderId}
        FOR UPDATE
    </select>

    <select id="selectByOrderNumber" resultMap="OrderMap">
        SELECT * FROM
        <include refid="table"/>
        WHERE order_number = #{orderNumber}
    </select>

    <select id="selectByUserIdAndOrderID" resultMap="OrderMap">
        SELECT * FROM
        <include refid="table"/>
        WHERE
        (buy_user_id = #{userId} OR sell_user_id = #{userId})
        AND id = #{orderId}
    </select>

    <select id="listByStatus" resultMap="OrderMap">
        SELECT * FROM
        <include refid="table"/>
        WHERE
        order_status = #{status}
    </select>

    <select id="selectByStatusAndCreateTime" resultType="java.lang.String">
        SELECT id FROM
        <include refid="table"/>
        <where>
            order_status = #{status}
            AND create_time &lt;= #{date}
        </where>
        LIMIT #{offest},#{rowConut}
    </select>

</mapper>